{
  "name": "retext-sentence-spacing",
  "version": "1.0.0",
  "description": "Check spacing (one or two spaces) between sentences",
  "license": "MIT",
  "keywords": [
    "sentence",
    "spacing",
    "spaces",
    "retext"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "nlcst-to-string": "^2.0.0",
    "plur": "^2.1.2",
    "unist-util-is": "^2.0.0",
    "unist-util-visit": "^1.1.0"
  },
  "repository": "https://github.com/wooorm/retext-sentence-spacing",
  "bugs": "https://github.com/wooorm/retext-sentence-spacing/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "devDependencies": {
    "browserify": "^14.1.0",
    "esmangle": "^1.0.1",
    "nyc": "^10.0.0",
    "remark-cli": "^2.0.0",
    "remark-preset-wooorm": "^1.0.0",
    "retext": "^4.0.0",
    "tape": "^4.0.0",
    "xo": "^0.17.1"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --bare -s retextSentenceSpacing > retext-sentence-spacing.js",
    "build-mangle": "esmangle retext-sentence-spacing.js > retext-sentence-spacing.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "ignores": [
      "retext-sentence-spacing.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "presets": "wooorm"
  }
}
